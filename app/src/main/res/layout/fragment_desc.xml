<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:scrollbars="none"
    android:paddingRight="10dp"
    tools:context=".Game.Other.DescGameFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel_fragmentDesc_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/img_fragmentDesc_back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_back" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_fragmentDesc_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/img_fragmentDesc_back"
                app:riv_corner_radius="10dp"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txtTozi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/img_fragmentDesc_icon"
                android:text="توضیحات"
                android:textColor="@color/grey800"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_fragmentDesc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTozi"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:layout_toLeftOf="@id/img_fragmentDesc_icon"
                android:textColor="@color/grey600"
                tools:text="esme" />


        </RelativeLayout>

        <TextView
            android:id="@+id/txt_fragmentDesc_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel_fragmentDesc_toolbar"
            android:padding="10dp"
            android:textColor="@color/grey800"
            android:textSize="12sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txt_fragmentDesc_desc"
            android:layout_marginTop="40dp"
            android:background="@color/grey700" />

        <TextView
            android:id="@+id/txtmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/iran_sans_bold"
            android:text="سایر اطلاعات"
            android:textColor="@color/black"
            android:textSize="18sp" />

        //1

        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtmore"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="دسته ها"
                android:textColor="@color/grey600"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_moreInfoRow_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="تفنینی" />


        </RelativeLayout>

        //2

        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="نصب شده ها"
                android:textColor="@color/grey600"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_moreInfoRow_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="تفنینی" />


        </RelativeLayout>

        //3

        <RelativeLayout
            android:id="@+id/rel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel2">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="حجم"
                android:textColor="@color/grey600"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_moreInfoRow_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="تفنینی" />


        </RelativeLayout>

        //4

        <RelativeLayout
            android:id="@+id/rel4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel3">

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="نسخه"
                android:textColor="@color/grey600"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_moreInfoRow_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="تفنینی" />


        </RelativeLayout>


        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:id="@+id/rv_fragmentDesc_moreInfo"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@id/txtmore" />-->


    </RelativeLayout>
</ScrollView>