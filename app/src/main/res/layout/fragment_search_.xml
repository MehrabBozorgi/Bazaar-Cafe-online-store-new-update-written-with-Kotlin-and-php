<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:scrollbars="none"
    android:layout_height="match_parent"
    tools:context=".Search.Search_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/re_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:elevation="20dp">

            <EditText
                android:textColor="@color/black"
                android:id="@+id/edt_search_edtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/search_style"
                android:drawableRight="@drawable/ic_baseline_search_edt"
                android:gravity="right"
                android:hint="  جستجو در بازی ها و برنامه ها"
                android:padding="10dp"
                android:textColorHint="@color/grey600"
                android:textSize="16sp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgGame_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_mic_24" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_searchFragment_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/re_search"
            android:layout_marginTop="30dp" />
    </RelativeLayout>


</ScrollView>