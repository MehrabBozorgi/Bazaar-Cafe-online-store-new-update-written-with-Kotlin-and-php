<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <RelativeLayout
        android:id="@+id/rel_moreAppForYouRow_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_moreAppForYouRow_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            app:riv_corner_radius="10dp"
            tools:src="@drawable/ic_launcher_background" />

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/img_moreAppForYouRow_icon">

            <TextView
                android:id="@+id/txt_moreAppForYouRow_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/irancell"
                android:text="اسم حاجی"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txt_moreAppForYouRow_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_moreAppForYouRow_name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="2000"
                android:textColor="@color/grey600"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            >

            <Button
                android:id="@+id/btn_moreAppForYouRow_install"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_style2"
                android:text="نصب"
                android:textColor="@color/green900"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_moreAppForYouRow_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_moreAppForYouRow_install"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:visibility="visible"
                tools:text="نوعش" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>